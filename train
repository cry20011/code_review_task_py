import argparse
import textfuncs


alph = "abcdefghijklmnopqrstuvwxyz"


def build_model(text, model_file):
    model = open(model_file, 'w')
    for letter in alph:
        model.write(str(text.count(letter)/len(text)) + '\n')


parser = argparse.ArgumentParser()

parser.add_argument("--text-file")
parser.add_argument("--model-file")
args = parser.parse_args()


text = textfuncs.input_text(args.text_file)
text = textfuncs.tolower_onlyletters(text)	

build_model(text, args.model_file)
